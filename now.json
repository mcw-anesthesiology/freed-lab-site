{
	"scope": "mcw-anesth",
	"version": 2,
	"builds": [
		{
			"src": "api/*.js",
			"use": "@now/node",
			"config": {
				"maxLambdaSize": "25mb"
			}
		},
		{
			"src": "package.json",
			"use": "@now/static-build",
			"config": {
				"distDir": "public"
			}
		}
	],
	"routes": [
		{
			"src": "/api/(.*)",
			"dest": "/api/$1.js"
		}
	],
	"env": {
		"MAIL_FROM": "contact@freed-lab.science",
		"MAIL_HOST": "@freed-lab-mail-host",
		"MAIL_USER": "@freed-lab-mail-user",
		"MAIL_PASS": "@freed-lab-mail-pass"
	}
}
